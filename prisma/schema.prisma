// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum GameType {
    open_ended
    true_false
    multiple_choice
}

model User {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    imageUrl  String?
    firstName String?
    lastName  String?

    emailAddress String @unique
}

model Game {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    topic       String
    userEmail   String
    timeStarted DateTime
    timeEnded   DateTime?
    gametype    GameType
    questions   Question[]
}

model Question {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    gameId   String
    question String
    answer   String
    options  Json? // for multiple choice questions

    isCorrect       Boolean? // for true/false questions
    isCorrectChoice Boolean? // for multiple choice questions
    percentCorrect  Float? //for open ended quesions

    userAnswer String?

    game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)

    @@index([gameId], name: "idx_gameId")
}
